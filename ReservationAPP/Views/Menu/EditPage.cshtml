@model ReservationAPP.Models.Menu
@{
	ViewData["Title"] = "EditPage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("EditPage", "Menu", FormMethod.Post))
{
	<div class="col-xl">
		<div class="card mb-4">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="mb-0">Edit Menu </h5>
				<small class="text-muted float-end"></small>
			</div>
			<div class="card-body">
	
				<form>@using (Html.BeginForm("EditPage", "Menu", FormMethod.Post))
				      {
					<div class="mb-3">
						<label class="form-label" for="basic-icon-default-fullname">Name</label>
						<div class="input-group input-group-merge">
							@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
						</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="basic-icon-default-description">Description</label>
						<div class="input-group input-group-merge">
							@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
						</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="basic-icon-default-money">Price</label>
						<div class="input-group input-group-merge">
							@Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

						</div>
					</div>
					<button type="submit" class="btn btn-primary">Save</button>
				}</form>
		</div>
		</div>
	</div>
}
